{
	"compilerOptions": {
		"module": "es2015",
		"target": "ES6",
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"inlineSourceMap": true,
		"esModuleInterop": true,
		"lib": [
			"DOM",
			"ES2015"
		],
		"declaration": true,
		"composite": true,
		"moduleResolution": "node",
		"strict": true,
        "baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist"
	},
    "include": [
		"**/*.ts"
	],
	"exclude": [
		"dist/**/*.d.ts"
	],
}